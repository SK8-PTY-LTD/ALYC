<div class="col-md-8 col-md-offset-2" ng-controller="ServiceCtrl">
	<form name="contactForm">
		<div class="form-group">
			<label for="InputFullName">服务</label>
			<input class="form-control" value="深海垂钓" disabled>
		</div>
